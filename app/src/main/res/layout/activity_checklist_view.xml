<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Tales"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <ImageView
            android:id="@+id/notes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/date"/>

        <ImageView
            android:id="@+id/date"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toStartOf="@id/notes"
            android:layout_marginEnd="8dp"
            android:src="@drawable/notes"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="May 12 - 15 weeks and 6 days"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:padding="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:backgroundTint="#F1F1F1"
            android:background="@drawable/border_overlay"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="9:00 AM" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:layout_weight="1"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Check Your Weight" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:backgroundTint="#F1F1F1"
            android:background="@drawable/border_overlay"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="9:00 AM" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Write in Your Journal" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:backgroundTint="#F1F1F1"
            android:background="@drawable/border_overlay"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="9:00 AM" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Register Medications" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:backgroundTint="#F1F1F1"
            android:background="@drawable/border_overlay"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="9:00 AM" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Log Your Meals" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:backgroundTint="#F1F1F1"
            android:background="@drawable/border_overlay"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="9:00 AM" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Take Mental Health Test" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:backgroundTint="#F1F1F1"
            android:background="@drawable/border_overlay"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="9:00 AM" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Prenatal Doctor Appointment" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:backgroundTint="#F1F1F1"
            android:layout_gravity="center"
            android:background="@drawable/edittext_overlay"
            android:textAlignment="center"
            android:text="+" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="17sp"
            android:layout_marginStart="10dp"
            android:text="Title" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="start">

        <ImageButton
            android:id="@+id/foreword_arrow"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edittext_overlay"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            app:tint="#000000"
            android:contentDescription="Next"/>
    </RelativeLayout>

</LinearLayout>
</ScrollView>