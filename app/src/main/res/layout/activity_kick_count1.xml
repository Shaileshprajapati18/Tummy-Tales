<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="24dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/kickcount" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_margin="40dp"
                android:layout_gravity="center"
                android:background="@drawable/startcountingbackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/startcounting"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/camera"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/progress"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/foreword_arrow"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/edittext_overlay"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"
                    app:tint="#000000"
                    android:contentDescription="Next"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@id/view_history"
                    android:text="View History"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/gray"
                    />

                <Button
                    android:id="@+id/view_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="How it Works"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/gray"
                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>