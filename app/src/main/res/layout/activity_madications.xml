<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="24dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="-30dp"
                android:src="@drawable/madications" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/square_check"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_overlay"
                android:backgroundTint="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/check"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Prenatal Vitamin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/border_gray"
                    android:textSize="19sp"
                    android:text="Tablet: 1" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:backgroundTint="#F1F1F1"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="15dp"
                android:text="9:41 AM"
                android:fontFamily="@font/verdana_bold_italic"
                android:background="@drawable/border_overlay"
                android:layout_marginStart="10dp"
                android:textAlignment="center" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/square_check"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_overlay"
                android:backgroundTint="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/check"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Prenatal Vitamin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/border_gray"
                    android:textSize="19sp"
                    android:text="Tablet: 1, 81 mg" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="15dp"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:backgroundTint="#F1F1F1"
                android:textStyle="bold"
                android:text="9:41 AM"
                android:fontFamily="@font/verdana_bold_italic"
                android:background="@drawable/border_overlay"
                android:layout_marginStart="10dp"
                android:textAlignment="center" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/square_check"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_overlay"
                android:backgroundTint="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/check"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Prenatal Vitamin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/border_gray"
                    android:textSize="19sp"
                    android:text="Tablet: 1" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="15dp"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:backgroundTint="#F1F1F1"
                android:background="@drawable/border_overlay"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:text="9:41 AM"
                android:textStyle="bold"
                android:fontFamily="@font/verdana_bold_italic"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/square_check"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_overlay"
                android:backgroundTint="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/check"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Prenatal Vitamin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tablet: 1, 100 IU"
                    android:textColor="@color/border_gray"
                    android:textSize="19sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="15dp"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/verdana_bold_italic"
                android:backgroundTint="#F1F1F1"
                android:background="@drawable/border_overlay"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:text="9:41 AM"
                android:textStyle="bold"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#F1F1F1"
                android:layout_gravity="center"
                android:src="@drawable/plus"
                android:padding="5dp"
                app:tint="@color/blue"
                android:background="@drawable/edittext_overlay"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/verdana_bold_italic"
                android:layout_marginStart="10dp"
                android:text="Add Medication" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="start">

            <ImageButton
                android:id="@+id/foreword_arrow"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/edittext_overlay"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:tint="#000000"
                android:contentDescription="Next"/>
        </RelativeLayout>


    </LinearLayout>
</ScrollView>