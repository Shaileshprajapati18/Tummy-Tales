<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="24dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="-20dp"
                android:src="@drawable/askamma" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/menu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, I am your very helpful virtual doctor!\n Send me questions about your symptoms, concerns, or any information my way! I am happy to help!"
                android:layout_margin="20dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:maxEms="15"
                android:textColor="@color/black"
                android:textSize="17dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ask me any question!"
                android:layout_marginTop="2dp"
                android:padding="15dp"
                android:gravity="bottom"
                android:layout_marginBottom="10dp"
                android:textColorHint="#5F5F5F"
                android:textColor="@color/black"
                android:drawableStart="@drawable/record1"
                android:drawableTint="@color/black"
                android:drawableEnd="@drawable/image1"
                android:drawablePadding="5dp"
                android:background="@drawable/rounded_bg_pink"
                android:backgroundTint="#D9D8DB"
                android:textSize="17dp"/>
        </LinearLayout>

    </LinearLayout>