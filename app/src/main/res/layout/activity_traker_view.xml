<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Tales"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <ImageView
            android:id="@+id/notes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/date"/>

        <ImageView
            android:id="@+id/date"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toStartOf="@id/notes"
            android:layout_marginEnd="8dp"
            android:src="@drawable/notes"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="May 12 - 15 weeks and 6 days"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:backgroundTint="#F1F1F1"
        android:background="@drawable/border_overlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Trackers"
            android:background="@drawable/border_overlay"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/checkList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Checklist"
            android:layout_weight="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/black_star"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Exercise" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/black_star"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Meal Map" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/black_star"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Journal" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/black_star"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Medications" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/black_star"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Kick Count" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/black_star"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_overlay"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:text="Mental Health Questionnaire" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="start">

        <ImageButton
            android:id="@+id/foreword_arrow"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edittext_overlay"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            app:tint="#000000"
            android:contentDescription="Next"/>
    </RelativeLayout>

</LinearLayout>