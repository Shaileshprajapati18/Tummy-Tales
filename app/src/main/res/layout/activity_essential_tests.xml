<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What to Expect"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/notes"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/date"/>

            <ImageView
                android:id="@+id/date"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toStartOf="@id/notes"
                android:layout_marginEnd="8dp"
                android:src="@drawable/notes"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Week 15: May 6 - May 12"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/edittext_overlay"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/factsAndFlash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Essential Testing" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/top_arrow"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="This week you will be responsible for scheduling the following tests. Learn more by pressing the star icon and add your appointment to your calendar."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/black_star"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_overlay"
                    android:padding="8dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    android:textAlignment="center"
                    android:text="Maternal Serum Screening" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/blue"
                    android:textSize="17sp"
                    android:backgroundTint="#F1F1F1"
                    android:background="@drawable/border_overlay"
                    android:layout_marginStart="10dp"
                    android:textAlignment="center"
                    android:text="Jun 10, 2025" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/blue"
                    android:textSize="17sp"
                    android:backgroundTint="#F1F1F1"
                    android:background="@drawable/border_overlay"
                    android:layout_marginStart="10dp"
                    android:textAlignment="center"
                    android:text="9:41 PM" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>