<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="24dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/mealmap" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:backgroundTint="#F1F1F1"
                android:background="@drawable/border_overlay">

                <TextView
                    android:id="@+id/plan_your_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Put on Plate"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/truth_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Bite Breakdown"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@drawable/border_overlay"
                    android:textAlignment="center"
                    android:backgroundTint="@color/white"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="40dp"
                android:background="@drawable/camera">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/camera1"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:background="@drawable/camera"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/progressbar"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/progressbar"
                    android:layout_weight="1"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/progressbar"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_centerInParent="true" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/progressbar"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_centerInParent="true" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/foreword_arrow"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/edittext_overlay"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"
                    app:tint="#000000"
                    android:contentDescription="Next"/>

                <ImageView
                    android:id="@+id/analytics"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_toRightOf="@id/foreword_arrow"
                    android:src="@drawable/analytics"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@id/view_history"
                    android:background="@drawable/border_overlay"
                    android:layout_margin="5dp" />

                <ImageView
                    android:id="@+id/view_history"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:padding="7dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/view_history"
                    android:background="@drawable/border_overlay"
                    android:layout_margin="5dp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>